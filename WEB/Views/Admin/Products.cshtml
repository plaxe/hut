@model List<WEB.Models.ProductModel>
@using System.IO
@{
    ViewData["Title"] = "Управление продуктами";
    Layout = "_AdminLayout";
    
    string GetFileName(string path)
    {
        if (string.IsNullOrEmpty(path)) return string.Empty;
        return path.Split('/').Last();
    }
    
    string GetFileExtension(string path)
    {
        if (string.IsNullOrEmpty(path)) return string.Empty;
        var fileName = GetFileName(path);
        var lastDotPosition = fileName.LastIndexOf('.');
        return lastDotPosition >= 0 ? fileName.Substring(lastDotPosition) : string.Empty;
    }
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Управление продуктами</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/admin/products/create" class="btn btn-sm btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Добавить продукт
        </a>
    </div>
</div>

<div class="alert alert-info mb-4" role="alert">
    <i class="bi bi-info-circle-fill me-2"></i>
    <strong>Примечание:</strong> Все загруженные изображения сохраняются в галерее и могут быть использованы в любом товаре. 
    При удалении товара или смене изображения, старые изображения не удаляются автоматически.
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Изображение</th>
                        <th>Название</th>
                        <th>Название (EN)</th>
                        <th>Категория</th>
                        <th>Статус</th>
                        <th>Обновлено</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="7" class="text-center py-4">
                                <div class="text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    <p>Список продуктов пуст</p>
                                </div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var product in Model.OrderBy(p => p.SortOrder))
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(product.ImagePath))
                                    {
                                        <div class="position-relative">
                                            <img src="@product.ImagePath" alt="@product.Name" class="img-thumbnail" style="max-width: 60px; max-height: 60px;">
                                            <div class="position-absolute bottom-0 end-0 bg-dark bg-opacity-75 text-white rounded px-1" style="font-size: 8px;">
                                                @GetFileExtension(product.ImagePath)
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="bg-secondary text-white d-flex justify-content-center align-items-center rounded" style="width: 60px; height: 60px;">
                                            <i class="bi bi-image"></i>
                                        </div>
                                    }
                                </td>
                                <td>@product.Name</td>
                                <td>@product.NameEn</td>
                                <td>@product.Category</td>
                                <td>
                                    <span class="badge @(product.IsActive ? "bg-success" : "bg-danger")">
                                        @(product.IsActive ? "Активен" : "Неактивен")
                                    </span>
                                </td>
                                <td>@product.UpdatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/admin/products/edit/@product.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-secondary" 
                                                data-bs-toggle="modal" data-bs-target="#toggleStatusModal-@product.Id">
                                            <i class="bi @(product.IsActive ? "bi-eye-slash" : "bi-eye")"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-danger" 
                                                data-bs-toggle="modal" data-bs-target="#deleteModal-@product.Id">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                    
                                    <!-- Модальное окно для изменения статуса -->
                                    <div class="modal fade" id="toggleStatusModal-@product.Id" tabindex="-1" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">@(product.IsActive ? "Деактивировать" : "Активировать") продукт</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Вы уверены, что хотите @(product.IsActive ? "деактивировать" : "активировать") продукт:</p>
                                                    <ul>
                                                        <li><strong>UA:</strong> "@product.Name"</li>
                                                        <li><strong>EN:</strong> "@product.NameEn"</li>
                                                    </ul>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                                                    <form action="/admin/products/toggle/@product.Id" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn @(product.IsActive ? "btn-warning" : "btn-success")">
                                                            @(product.IsActive ? "Деактивировать" : "Активировать")
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- Модальное окно для удаления -->
                                    <div class="modal fade" id="deleteModal-@product.Id" tabindex="-1" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Удаление продукта</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Вы уверены, что хотите удалить продукт:</p>
                                                    <ul>
                                                        <li><strong>UA:</strong> "@product.Name"</li>
                                                        <li><strong>EN:</strong> "@product.NameEn"</li>
                                                    </ul>
                                                    <p class="text-danger"><strong>Внимание:</strong> Это действие нельзя отменить.</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                                                    <form action="/admin/products/delete/@product.Id" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-danger">Удалить</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Переключение на вкладку добавления при клике на кнопку "Добавить продукт"
        document.addEventListener('DOMContentLoaded', function() {
            const addBtn = document.querySelector('.btn-primary[href="/admin/products/create"]');
            
            if (addBtn) {
                addBtn.addEventListener('click', function(e) {
                    if (e.currentTarget.closest('#productsList')) {
                        e.preventDefault();
                        document.querySelector('#add-tab').click();
                    }
                });
            }
        });
    </script>
} 